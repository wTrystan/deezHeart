<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noir"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    tools:context=".controller.MainActivity"
    android:theme="@android:style/Theme.Black.NoTitleBar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/noir"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        tools:context=".controller.MainActivity"
        android:theme="@android:style/Theme.Black.NoTitleBar">

        <ImageView
            android:id="@+id/logoSpotify"
            android:layout_width="293dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="-10dp"
            android:src="@drawable/deezer" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:src="@drawable/catwalkingcrop" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/noir"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        tools:context=".controller.MainActivity"
        android:theme="@android:style/Theme.Black.NoTitleBar">


        <Button
            android:id="@+id/BPMsport"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="Playlist sportive"
            android:textColor="@color/blanc"
            android:textSize="18dp" />

        <Button
            android:id="@+id/BPMcalme"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="Playlist calme"
            android:textColor="@color/blanc"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/SeekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/blanc"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"></TextView>


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:textSize="30dp" />

    <Button
        android:id="@+id/spotify_tracks"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Accès aux fonctionnalités"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/blanc" />

</LinearLayout>