<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/noir"
    android:orientation="vertical"
    tools:context=".controller.SpotifyPlayer">


    <ImageButton
        android:id="@+id/bpmsport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/noir"
        android:src="@drawable/returnmain" />

    <TextView
            android:id="@+id/logoPlayer"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingBottom="1dp"
            android:text="SpotifHeart"
            android:textColor="@color/blanc"
            android:textSize="25dp" />

    <ImageView
        android:id="@+id/logoSpotify"
        android:layout_width="293dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="3dp"
        android:src="@drawable/spotify" />

    <ImageView
        android:id="@+id/pochettePlAYER"
        android:layout_width="293dp"
        android:layout_height="293dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/pochetteplayer" />


    <TextView
        android:id="@+id/nameSong"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:paddingBottom="1dp"
        android:text="Unsustainable"
        android:textColor="#00D856"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/infoComplementaires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="17dp"
        android:text="Muse - 87 BPM"
        android:paddingBottom="30dp"
        android:textColor="#00D856" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/momentChanson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:text="0:00"
            android:textColor="#00D856"
            android:textSize="15dp" />

        <SeekBar
            android:id="@+id/slider"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp"></SeekBar>

        <TextView
            android:id="@+id/dureeChanson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingRight="10dp"
            android:text="3:14"
            android:textColor="#00D856"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/previoustrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/noir"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:src="@drawable/previous" />

        <ImageButton
            android:id="@+id/pause_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/noir"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="0dp"
            android:src="@drawable/pause" />

        <ImageButton
            android:id="@+id/next_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/noir"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:src="@drawable/next" />


    </LinearLayout>


</LinearLayout>