<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noir"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    tools:context=".controller.MainActivity"
    android:theme="@android:style/Theme.Black.NoTitleBar">

        <ImageView
            android:id="@+id/logoSpotify"
            android:layout_width="293dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/spotify" />

        <TextView
            android:id="@+id/affichageQueue"
            android:layout_width="414dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Choix de la playlist :"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="35dp"
            android:fontFamily="sans-serif-condensed"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/noir"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        tools:context=".controller.MainActivity"
        android:theme="@android:style/Theme.Black.NoTitleBar">


        <ImageButton
            android:id="@+id/bpmsport"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@color/noir"
            android:src="@drawable/sportblanc" />

        <ImageButton
            android:id="@+id/bpmcalme"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@color/noir"
            android:src="@drawable/zenblanc" />

        <ImageButton
            android:id="@+id/soiree"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@color/noir"
            android:src="@drawable/partyblanc" />


    </LinearLayout>

    <TextView
        android:id="@+id/SeekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/blanc"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"></TextView>

    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/croller"
        android:layout_width="244dp"
        android:layout_height="208dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        app:back_circle_color="#EDEDED"
        app:indicator_color="#0B3C49"
        app:indicator_width="10"
        app:label_color="#000000"
        app:main_circle_color="#FFFFFF"
        app:progress_primary_color="#0B3C49"
        app:progress_secondary_color="#EEEEEE" />


    <ImageButton
        android:id="@+id/spotify_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/noir"
        android:gravity="center"
        android:paddingTop="20dp"
        android:src="@drawable/boutoncoeurblanc" />

</LinearLayout>